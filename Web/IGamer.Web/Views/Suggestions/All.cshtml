@model IGamer.Web.ViewModels.Suggestions.AllSuggestionsViewModel
@{
    ViewData["Title"] = "Game Suggestions";
}
<section class="breadcrumb breadcrumb_bg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb_iner text-center">
                    <div class="breadcrumb_iner_item">
                        <h2>@ViewData["Title"]</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<div class="container">
    <div class="section_padding">
        <h3 class="mb-30">Table</h3>
        <div>
            <div class="progress-table">
                <div class="table-head">
                    <div class="serial">#</div>
                    <div class="country">Game</div>
                    <div class="visit">Votes</div>
                    <div class="percentage">Votes in Percentages</div>
                </div>
                @foreach (var suggestion in Model.Suggestions)
                {
                    <div class="table-row">
                        <div class="serial">@suggestion.Id</div>
                        <div class="country"> <img src="@suggestion.ImageUrl" alt="flag">@suggestion.Title</div>
                        <div class="visit">@suggestion.Votes</div>
                        <div class="percentage">
                            <div class="progress">
                                <div class="progress-bar color-1" role="progressbar" style="width: @(suggestion.Percentage)%"
                                     aria-valuenow="@suggestion.Percentage" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>