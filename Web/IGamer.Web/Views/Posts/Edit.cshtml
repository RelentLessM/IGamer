@using IGamer.Data.Models.Enums
@model IGamer.Web.ViewModels.Posts.EditPostViewModel

@{
    ViewData["Title"] = "Edit";
}


<section class="live_stareams">
    <div class="container">
        @if (this.TempData["InfoMessage"] != null)
        {
            <div class="alert alert-info">
                @this.TempData["InfoMessage"]
            </div>
        }
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb_iner text-center">
                    <div class="breadcrumb_iner_item">
                        <h1>Edit</h1>
                        <h4>Post</h4>
                        <hr />
                        <div class="live_stareams_text">
                            <div class="col-md-12" align="center">
                                <form method="post" asp-action="Edit">
                                    <div class="form-group">
                                        <label asp-for="Title" class="control-label text-light"></label>
                                        <input asp-for="Title" class="form-control" />
                                        <span asp-validation-for="Title" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label text-light">Content</label>
                                        <textarea asp-for="Content" class="form-control"></textarea>
                                        <span asp-validation-for="Content" class="text-danger"></span>
                                    </div>
                                    <hr />
                                    <div class="form-group">
                                        <input type="submit" value="Edit" class="genric-btn success circle large" />
                                    </div>
                                </form>
                            </div>
                        </div>

                        <div>
                            <a asp-area="" asp-controller="Posts" asp-action="DetailedPost" asp-route-id="@Model.Id" class="genric-btn info circle large">Back to Post</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script src="/lib/tinymce/tinymce.min.js" type="text/javascript"></script>
<script type="text/javascript">
    tinymce.init({
        selector: "textarea",
        plugins: [
            "image paste table link code media"
        ]
    });
</script>