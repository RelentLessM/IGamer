@using IGamer.Web.ViewModels.Administration.Suggestions;
@model AllSuggestionsForAdminViewModel
@{
    ViewData["Title"] = "Suggestions";
    var suggestions = Model.Suggestions.ToList();
}
<section class="breadcrumb breadcrumb_bg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb_iner text-center">
                    <div class="breadcrumb_iner_item">
                        <h2>@ViewData["Title"]</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<div class="container">
    <div class="section_padding">
        <div>
            <div class="progress-table">
                <div class="table-head">
                    <div class="country ml-5">Game</div>
                    <div class="visit">Votes</div>
                    <div class="visit"></div>
                    <div class="percentage">Add</div>
                </div>
                @foreach(var suggestion in Model.Suggestions)
                {
            <div class="table-row">
                <div class="country ml-5"> <img class="suggested-game" src="@suggestion.ImageUrl" alt="flag">@suggestion.Title</div>
                <div class="visit">
                    @suggestion.VotesCount
                </div>
                <div class="visit"></div>
                <div class="percentage">
                    <a type="button" class="swiper-button-black primary text-white btn_1 circle large mb-5 mr-5" asp-area="Administration" asp-controller="Games" asp-action="Add" asp-route-id="@suggestion.Id">Add to games</a>
                </div>
            </div>
                }
            </div>
        </div>
    </div>
</div>